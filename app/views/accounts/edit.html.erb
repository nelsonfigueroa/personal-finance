<section class="section">
  <div class="container">
    <h1 class="title">Edit Account</h1>

    <%= render partial: 'layouts/notifications' %>

    <%= form_with model: @account do |f| %>
      <div class="field">
        <%= f.label :name %>
        <div class="control">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input' %>
        </div>
      </div>

      <div class="control">
        <%= f.submit "Update", class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</section>
