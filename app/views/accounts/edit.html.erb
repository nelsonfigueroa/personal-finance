<section class="section">
  <div class="container">
    <h1 class="title">Edit Account</h1>

    <%= render partial: 'layouts/notifications' %>

		<nav class="breadcrumb" aria-label="breadcrumbs">
			<ul>
				<li><%= link_to 'Accounts', accounts_path %></li>
        <li><%= link_to "#{@account.name}", account_path(@account) %></li>
				<li class="is-active"><a href="#" aria-current="page">Edit Account</a></li>
			</ul>
		</nav>

    <%= form_with model: @account do |f| %>
      <div class="field">
        <%= f.label :name %>
        <div class="control">
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input' %>
        </div>
      </div>

      <div class="control">
        <%= f.submit "Update", class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</section>
