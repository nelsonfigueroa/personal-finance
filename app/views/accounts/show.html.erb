<section class="section">
  <div class="container">
    <h1 class="title"><%= @account.name %></h1>
		<%= link_to 'Add Statement', new_account_statement_path(account_id: @account.id), class: 'button is-link' %>
    <%= link_to 'Edit', edit_account_path, class: 'button is-link' %>

		<% unless @statements.empty? %>
    <table class="table is-striped is-hoverable is-fullwidth is-size-5">
      <thead>
        <tr> 
          <th>Balance</th>
          <th>Date</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
				<tr>
				<% @statements.each do |statement| %>
					<td class="has-text-success">$<%= statement.balance %></td>
					<td><%= statement.date %></td>
					<td><%= link_to 'Edit', edit_account_statement_path(account_id: @account.id, id: statement), class: 'button is-small is-rounded' %></td>
				<% end %>
				</tr>
			</tbody>
		</table>


		<% end %>
	</div>
</section>