<section>
    <%= render partial: 'layouts/notifications' %>

    <nav aria-label="breadcrumbs">
      <ul>
        <li><%= link_to 'Accounts', accounts_path %></li>
        <li><a href="#" aria-current="page">Add Account</a></li>
      </ul>
    </nav>

    <h1>Add Account</h1>
    <%= form_with model: @account do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-field' %>
      <%= f.submit "Add", class: '' %>
    <% end %>
</section>
