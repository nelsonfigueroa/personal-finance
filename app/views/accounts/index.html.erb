<section>
  <%= render partial: 'layouts/notifications' %>

  <br><br>

  <h1>Accounts</h1>
  <small>Create accounts to keep track of ending balances. You can then create statements for each account. Statements get aggregated to calculate net worth in the dashboard.</small>
  <br><br>
  <button><%= link_to 'Add Account', new_account_path, class: '' %></button>

  <% if @accounts.empty? %>
    <p>No existing accounts. Create one!</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Latest Statement</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
          <td><%= link_to account.name, account %></td>
          <% if account.statements.order(:date).last %>
            <td><span><%= humanized_money_with_symbol account.statements.order(:date).last.balance %></span></td>
            <td><%= account.statements.order(:date).last.date.to_formatted_s(:long) %></td>
          <% else %>
            <td><i>No recorded statements</i></td>
            <td></td>
          <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</section>
