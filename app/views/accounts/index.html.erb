<p>Net Worth Dashboard</p>

Hello <%= current_user.name %>!

<%# area_chart @net_worth %>
<%= @net_worth %>
<%= 
area_chart @user.statements.sorted_by_date.group_by_day(:date).maximum(:balance), 
prefix: "$", 
# discrete: true, 
spanGaps: true, 
messages: {empty: "No statements recorded."},
title: "Net Worth"
%>

<p>Your accounts:</p>

<% if @accounts.empty? %>
 <p>No existing accounts. Create one.</p>
<% else %>
  <ul>
  <% @accounts.each do |account| %>
    <li><%= link_to account.name, account %></li>
    <% if account.statements.last %>
	    <li>Last statement: <%= account.statements.last.balance %> | <%= account.statements.last.date %> </li>
    <% end %>
    <br>
  <% end %>
  </ul>
<% end %>

<hr>
<%= link_to 'Add Account', '/accounts/new'%>

