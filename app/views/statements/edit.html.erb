<section>
  <div>
    <%= render partial: 'layouts/notifications' %>

    <nav aria-label="breadcrumbs">
      <ul>
        <li><%= link_to 'Accounts', accounts_path %></li>
        <li><%= link_to "#{@account.name}", account_path(@account) %></li>
        <li><a href="#" aria-current="page">Edit Statement</a></li>
      </ul>
    </nav>

    <h1>Edit Statement</h1>

    <div>
      <div>
        <div>
          <%= form_with model: @statement, url: {controller: 'statements', action: 'update'} do |f| %>
            <div>
              <%= f.label :balance %>
              <div>
                <%= f.number_field :balance, step: 0.01, class: '' %>
              </div>
            </div>

            <div>
              <%= f.label :date %>
              <div>
                <%= f.date_field :date, class: '' %>
              </div>
            </div>

            <div>
              <%= f.label :notes %>
              <div>
                <%= f.text_field :notes, class: '' %>
              </div>
            </div>

            <div>
              <%= f.submit "Update", class: '' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
