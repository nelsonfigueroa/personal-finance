<%= render partial: 'layouts/notifications' %>

<div class="auth-form">
  <h1>Log in</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: "email", class: 'form-field' %>
    <br>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", class: 'form-field' %>

    <% if devise_mapping.rememberable? %>
      <br>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: '' %>
    <% end %>

    <%= f.submit "Log in", class: '' %>
  <% end %>
</div>
