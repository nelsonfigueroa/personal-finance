<div class="container">
<%= render partial: 'layouts/notifications' %>
  <h1 class="text-2xl font-bold">Log in</h1>
  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: 'w-full max-w-sm' }) do |f| %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: "email", class: 'block input input-bordered input-accent w-full max-w-xs' %>
    <br>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "new-password", class: 'block input input-bordered input-accent w-full max-w-xs' %>

    <% if devise_mapping.rememberable? %>
      <br>
      <%= f.check_box :remember_me, class: 'checkbox leading-tight' %>
      <%= f.label :remember_me, class: 'label-text' %>
    <% end %>

    <%= f.submit "Log in", class: 'btn btn-neutral' %>
  <% end %>
</div>
