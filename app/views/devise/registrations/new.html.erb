<section>
  <h1>Sign up</h1>

  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.text_field :name, autofocus: true, placeholder: 'Name', autocomplete: "name", class: 'form-field' %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: "email", class: 'form-field' %>
    <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", autocomplete: "new-password", class: 'form-field' %>
    <%= f.password_field :password_confirmation, placeholder: 'Repeat Password', autocomplete: "new-password", class: 'form-field' %>
    <%= f.submit "Sign up", class: '' %>
  <% end %>
</section>
