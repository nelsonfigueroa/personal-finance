<div class="container">
  <%= render partial: 'layouts/notifications' %>

  <small>Categories to be assigned to transactions.</small>
  <br><br>
  <%= link_to 'Add a Category', new_category_path, class: '' %>
  <br><br>

  <% if @categories.empty? %>
    <p>No existing categories. Create one!</p>
  <% else %>
    <table class="">
      <thead>
        <tr>
          <th>Name</th>
          <th>Color</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
          <td><%= link_to category.name, category, class: '' %> [<%= category.transactions.size %>]</td>
          <td><div class='' style="background-color: <%= category.color %>"></div></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
