<section class="section">
  <div class="container">
    <h1 class="title">Create Tracker</h1>

    <%= render partial: 'layouts/notifications' %>

    <%= form_with model: @expense_tracker do |f| %>
      <div class="field">
        <%= f.label :category %>
        <div class="control">
          <%= f.text_field :category, autofocus: true, autocomplete: "category", class: 'input' %>
        </div>
      </div>

      <div class="control">
        <%= f.submit "Create", class: 'button is-primary' %>
      </div>
    <% end %>
  </div>
</section>