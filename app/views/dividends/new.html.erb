<section>
  <%= render partial: 'layouts/notifications' %>

  <nav aria-label="breadcrumbs">
    <ul>
      <li><%= link_to 'Dividends', dividends_path %></li>
      <li><a href="#" aria-current="page">Create Dividend</a></li>
    </ul>
  </nav>

  <h1>Create Dividend</h1>

  <%= form_with model: @dividend do |f| %>
    <%= f.label :date %>
    <%= f.date_field :date, autofocus: true, autocomplete: "date", value: "#{Time.now.strftime('%Y-%m-%d')}", class: '' %>
    <%= f.label :amount %>
    <%= f.text_field :amount, autofocus: true, class: '' %>
    <%= f.label :ticker %>
    <%= f.text_field :ticker, autofocus: true, class: '' %>
    <%= f.submit "Add", class: '' %>
  <% end %>
</section>
